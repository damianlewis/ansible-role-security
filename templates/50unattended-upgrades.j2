Unattended-Upgrade::Allowed-Origins {
        "${distro_id}:${distro_codename}";
        "${distro_id} ${distro_codename}-security";
//      "${distro_id} ${distro_codename}-updates";
//      "${distro_id}:${distro_codename}-proposed";
//      "${distro_id}:${distro_codename}-backports";
};

Unattended-Upgrade::Package-Blacklist {
{% for package in security_unattended_upgrade_blacklist %}
      "{{ package }}";
{% endfor %}
};

{% if security_unattended_upgrade_mail_to %}
Unattended-Upgrade::Mail "{{ security_unattended_upgrade_mail_to }}";
{% if security_unattended_upgrade_mail_on_error %}
Unattended-Upgrade::MailOnlyOnError "true";
{% endif %}
{% endif %}

{% if security_unattended_upgrade_remove_unused_dependencies %}
Unattended-Upgrade::Remove-Unused-Dependencies "true";
{% endif %}

{% if security_unattended_upgrade_reboot %}
Unattended-Upgrade::Automatic-Reboot "true";
Unattended-Upgrade::Automatic-Reboot-Time "{{ security_unattended_upgrade_reboot_time }}";
{% endif %}